<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#f5f5f5"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/head_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#aaaaaa"
        android:gravity="top" >

        <ImageView
            android:id="@+id/head_title_backimage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="false"
            android:contentDescription="@null"
            android:paddingLeft="14dp"
            android:paddingRight="17dp"
            android:src="@drawable/page_arrow"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Short Blog"
            android:clickable="true"
            android:id="@+id/head_title_text"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/head_title_add"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingLeft="17dp"
            android:paddingRight="14dp"
            android:src="@drawable/main_add" />

    </RelativeLayout>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/listview_msg"
        android:layout_below="@+id/head_title"
        android:layout_alignParentStart="true" />

</RelativeLayout>
